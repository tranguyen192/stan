{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "ignorePatterns": ["public/", "node_modules/"],
  "rules": {
    "prettier/prettier": "error"
    // "comma-dangle": ["error", "never"]

    // "no-unused-vars": ["error", { "args": "none" }]
  },

  "plugins": ["prettier", "jest"]
}
